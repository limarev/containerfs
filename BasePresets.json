{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "debug": {
        "output": false,
        "find": false
      },
      "binaryDir": "${presetName}",
      "hidden": true
    },
    {
      "name": "vcpkg",
      "toolchainFile": "$penv{VCPKG_TOOLCHAIN_DIR}/vcpkg.cmake",
      "hidden": true
    },
    {
      "name": "ninja",
      "generator": "Ninja",
      "hidden": true
    },
    {
      "name": "release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "hidden": true
    },
    {
      "name": "debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "hidden": true
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "stopOnFailure": true,
        "timeout": 60
      },
      "hidden": true
    }
  ],
  "packagePresets": [
    {
      "name": "default",
      "vendorName": "Some company",
      "description": "Very useful tool",
      "variables": {
        "CPACK_PACKAGE_CONTACT": "https://www.company.com"
      },
      "output": {
        "debug": false,
        "verbose": false
      },
      "hidden": true
    },
    {
      "name": "zip",
      "generators": [
        "ZIP"
      ],
      "hidden": true
    },
    {
      "name": "deb",
      "generators": [
        "DEB"
      ],
      "variables": {
        "CPACK_DEBIAN_FILE_NAME": "DEB_DEFAULT",
        "CPACK_DEBIAN_PACKAGE_SECTION": "misc",
        "CPACK_COMPONENTS_GROUPING": "ALL_COMPONENTS_IN_ONE",
        "CPACK_DEB_COMPONENT_INSTALL": "YES",
        "CPACK_DEBIAN_PACKAGE_DEPENDS": ""
      },
      "hidden": true
    },
    {
      "name": "rpm",
      "generators": [
        "RPM"
      ],
      "variables": {
        "CPACK_RPM_FILE_NAME": "RPM-DEFAULT",
        "CPACK_RPM_PACKAGE_GROUP": "mics",
        "CPACK_PACKAGE_REQUIRES": "",
        "CPACK_PACKAGING_INSTALL_PREFIX": "/opt",
        "CPACK_RPM_PACKAGE_RELOCATABLE": "ON"
      },
      "hidden": true
    }
  ]
}